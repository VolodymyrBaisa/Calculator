<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="keyboard"
            type="ua.bios.mvvm.viewmodel.CalculatorHandler" />

        <variable
            name="calculatorViewModel"
            type="ua.bios.mvvm.viewmodel.CalculatorViewModel" />
    </data>

    <LinearLayout
        style="@style/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/gt"
                style="@style/button_teal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="@{calculatorViewModel.GTActivate}"
                android:onClick="@{keyboard.onClickGrandTotal}"
                android:text="GT" />

            <Button
                android:id="@+id/rate"
                style="@style/button_teal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickRate}"
                android:text="RATE" />

            <Button
                android:id="@+id/tax_minus"
                style="@style/button_teal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickTaxMinus}"
                android:text="TAX-" />

            <Button
                android:id="@+id/tax_plus"
                style="@style/button_teal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickTaxPlus}"
                android:text="TAX+" />
        </LinearLayout>

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/percentage"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickPercentage}"
                android:text="%" />

            <Button
                android:id="@+id/square_root"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickSquareRoot}"
                android:text="√x" />

            <ImageButton
                android:id="@+id/backspace"
                style="@style/button_deep_orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="backspace"
                android:gravity="center"
                android:onClick="@{keyboard.onClickBackspace}"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backspace" />

            <Button
                android:id="@+id/reset"
                style="@style/button_deep_orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickClear}"
                android:text="C" />
        </LinearLayout>

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/mc"
                style="@style/button_indigo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickMemoryClear}"
                android:text="MC" />

            <Button
                android:id="@+id/mr"
                style="@style/button_indigo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickMemoryRecall}"
                android:text="MR" />

            <Button
                android:id="@+id/m_minus"
                style="@style/button_indigo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickMemorySubtract}"
                android:text="M-" />

            <Button
                android:id="@+id/m_plus"
                style="@style/button_indigo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickMemoryAdd}"
                android:text="M+" />
        </LinearLayout>

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="9" />

            <Button
                android:id="@+id/divide"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="÷" />
        </LinearLayout>

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="4" />

            <Button
                android:id="@+id/five"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="5" />

            <Button
                android:id="@+id/six"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="6" />

            <Button
                android:id="@+id/multiply"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="×" />
        </LinearLayout>

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="1" />


            <Button
                android:id="@+id/two"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="2" />

            <Button
                android:id="@+id/tree"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="3" />

            <Button
                android:id="@+id/subtract"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/dot"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="." />

            <Button
                android:id="@+id/zero"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="0" />

            <Button
                android:id="@+id/equal"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickEquals}"
                android:text="=" />

            <Button
                android:id="@+id/plus"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            style="@style/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/opposite"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickOpposite}"
                android:text="+/-" />

            <Button
                android:id="@+id/double_zero"
                style="@style/button_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="00" />

            <Button
                android:id="@+id/left_parenthesis"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text="(" />

            <Button
                android:id="@+id/right_parenthesis"
                style="@style/button_blue_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{keyboard.onClickButton}"
                android:text=")" />
        </LinearLayout>
    </LinearLayout>
</layout>