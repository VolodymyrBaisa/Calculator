<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="grandTotalScreen"
            type="ua.bios.mvvm.viewmodel.GrandTotalViewModel" />

        <variable
            name="taxRateScreen"
            type="ua.bios.mvvm.viewmodel.TaxRateViewModel" />

        <variable
            name="calculatorScreenHandler"
            type="ua.bios.mvvm.viewmodel.CalculatorScreenHandler" />
    </data>

    <LinearLayout
        style="@style/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/gtScreen"
                style="@style/gtScreen"
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:text="@{grandTotalScreen.activate ? @string/app_gt_screen : ``}" />

            <TextView
                android:id="@+id/rateScreen"
                style="@style/rateScreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@{@string/app_tax_rate + `(` + taxRateScreen.value +`)`}" />
            </LinearLayout>

            <ua.bios.display.CalculatorScreen
                android:id="@+id/screen"
                style="@style/screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onTextChanged="@{calculatorScreenHandler.onTextChanged}"
                app:setFont="@{`fonts/Calculator.otf`}" />
        </FrameLayout>
    </LinearLayout>
</layout>