<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/app_pref_category_vibration">
        <CheckBoxPreference
            android:title="@string/app_pref_vibration"
            android:key="@string/app_pref_vibration_settings"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/app_pref_category_screen">
        <ListPreference
            android:title="@string/app_pref_screen_font_color"
            android:key="@string/app_pref_screen_font_color_settings"
            android:entries="@array/app_pref_array_screen_color"
            android:entryValues="@array/app_pref_array_screen_color_alias"
            android:defaultValue="@string/app_pref_screen_font_color_default_value_settings"/>

        <EditTextPreference
            android:title="@string/app_pref_screen_font_size"
            android:key="@string/app_pref_screen_font_size_settings"
            android:inputType="number"
            android:defaultValue="40" />

        <EditTextPreference
            android:title="@string/app_pref_screen_text_lines"
            android:key="@string/app_pref_screen_text_lines_settings"
            android:inputType="number"
            android:defaultValue="2" />

        <SwitchPreference
            android:title="@string/app_pref_screen_keep_on"
            android:key="@string/app_pref_screen_keep_on_settings"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/app_pref_category_keyboard">
        <EditTextPreference
            android:title="@string/app_pref_keyboard_font_size"
            android:key="@string/app_pref_keyboard_font_size_settings"
            android:inputType="number"
            android:defaultValue="20" />
    </PreferenceCategory>

</PreferenceScreen>